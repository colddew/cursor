# AI Studio API 配置
# 从 https://aistudio.baidu.com/paddleocr/task 获取

AISTUDIO_API_URL=你的API地址
AISTUDIO_TOKEN=你的访问令牌

AISTUDIO_STRUCTURE_URL=你的API地址
AISTUDIO_STRUCTURE_TOKEN=你的访问令牌

# 图片矫正配置（true/false）
USE_DOC_ORIENTATION=false   # 方向矫正
USE_DOC_UNWARPING=false     # 扭曲矫正

# 批量处理并发数
MAX_WORKERS=3

# 短文本阈值（超长文本不写入Excel）
MAX_TEXT_LABEL_LENGTH=30
# 表格间隔行数（超长文本替换成空行）
EXCEL_TABLE_GAP_ROWS=3

# 浙江 Excel 自适应列宽
EXCEL_MAX_COLUMN_WIDTH=60

# 安徽 Excel 固定列宽配置
EXCEL_COL_WIDTH_A=30
EXCEL_COL_WIDTH_B=70
EXCEL_COL_WIDTH_C=150

# API 请求间隔（毫秒，防止被封）
API_REQUEST_DELAY_MS=1000

# 表头背景色(16进制)
EXCEL_HEADER_BG_COLOR='FFFFCC'
